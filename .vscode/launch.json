{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: CARLA Bike Simulator",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/run_dev.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        },
        {
            "name": "Python: CARLA Bike Simulator (Current File)",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        }
    ]
}
